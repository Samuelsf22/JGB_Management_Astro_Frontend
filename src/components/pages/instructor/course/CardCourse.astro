---
import type { Course } from "../../../types/api";
import Button from "../../../ui/Button.astro";

interface Props {
  course: Course;
}
const { course } = Astro.props as Props;
---

<h1 class="text-xl sm:text-3xl font-bold">{course.name}</h1>

<div class="flex sm:flex-row flex-col gap-4">
  <Button
    name="outline"
    icon={{ name: "mdi:chevron-right", size: 24 }}
    iconEnd={true}
  >
    Students
  </Button>
  <Button
    name="outline"
    icon={{ name: "mdi:chevron-right", size: 24 }}
    iconEnd={true}
  >
    Attendances
  </Button>
  <Button
    name="outline"
    icon={{ name: "mdi:chevron-right", size: 24 }}
    iconEnd={true}
  >
    Evaluations
  </Button>
</div>
