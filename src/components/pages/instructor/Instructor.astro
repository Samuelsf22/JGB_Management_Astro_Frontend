---
import { getSession } from "auth-astro/server";

const session = await getSession(Astro.request);
---

<div class="min-h-screen p-8">
    <div class="max-w-4xl mx-auto border bg-light-background-100 border-light-background-200 dark:bg-dark-background-900 dark:border-dark-background-800 rounded-lg shadow-lg p-6">
        <div class="relative">
            <h1 class="text-3xl font-bold mb-4">Instructor Dashboard</h1>
            <span class="absolute top-0 right-0 bg-primary-300 dark:bg-primary-600 text-xs px-2 py-1 rounded-full">BETA</span>
        </div>

        <div class="bg-primary-200/20 border-l-4 border-primary p-4 mb-6">
            <p class="">Welcome, <span class="font-semibold">{session?.user?.name}</span></p>
        </div>
        <p class="text-light-foreground-400 dark:text-dark-foreground-300">This is only a preview of the web application. The final version will have more features and improvements.</p>
    </div>
</div>
