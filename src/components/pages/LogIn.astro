---
import { Image, Picture } from "astro:assets";
import BackgroundImage from "../../assets/login_background.webp";
import Logo from "../../assets/logo.svg";
import LogInForm from "../form/LogInForm.tsx";
import SignInGoogle from "../form/SignInGoogle.tsx";
import Divider from "../ui/Divider.tsx";
---

<main class="flex h-screen overflow-hidden">
  <div class=" hidden md:block w-full h-full">
    <Picture
      src={BackgroundImage}
      alt="background"
      class="w-full h-full object-cover"
    />
  </div>

    <div
      class="w-[600px] flex flex-col justify-between items-center flex-grow p-6"
    >
      <div class="flex flex-col items-center justify-center flex-grow">
        <Image src={Logo} alt="logo" class="w-40 mx-auto mb-14" />
        <SignInGoogle client:load />
        <div
          class="w-full flex items-center justify-center text-center mt-6 mb-6"
        >
          <Divider className="w-5/12 flex-grow" />
            <span class="w-2/12 text-small text-default-300">OR</span>
          <Divider className="w-5/12 flex-grow" />
        </div>
        <LogInForm client:load />
      </div>

      <footer class="w-80 text-small text-center text-default-300 mt-4">
        <Divider className="mb-4" />
        <span>José Gálvez Barrenechea - 2024</span>
      </footer>
    </div>
  </main>