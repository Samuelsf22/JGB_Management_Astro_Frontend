---
export interface Props {
  category?: 'normal' | 'success' | 'error' | 'warning';
  message?: string;
  show?: boolean;
}

const { 
  category = 'normal', 
  message = 'Mensaje por defecto',
  show = false
} = Astro.props;

const typesToasts = {
  normal: 'text-blue-500',
  success: 'text-teal-500',
  error: 'text-red-500',
  warning: 'text-yellow-500'
};

const toastColor = typesToasts[category] || typesToasts['normal'];
---

{show && (
  <div class="max-w-xs bg-white border border-gray-200 rounded-xl shadow-lg dark:bg-neutral-800 dark:border-neutral-700" role="alert">
    <div class="p-4">
      <p class={`text-sm text-gray-700 dark:text-neutral-400 ${toastColor}`}>
        {message}
      </p>
    </div>
  </div>
)}