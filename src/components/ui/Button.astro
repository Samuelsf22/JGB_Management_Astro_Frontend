---
interface Props {
  id?: string;
  name: "solid" | "outline" | "white" | "ghost" | "circle" | "link";
  icon?: typeof Icon.arguments;
  iconStart?: boolean;
  iconEnd?: boolean;
  disabled?: boolean;
  [key: string]: any;
}
import { Icon } from "astro-icon/components";
const { id, name, icon, iconStart, iconEnd, disabled = false, ...rest } = Astro.props as Props;
const buttonStyles = [
  {
    name: "solid",
    class:
      "w-full py-3 px-3 flex justify-center items-center focus:outline-none gap-x-2 text-sm rounded-lg group border border-transparent bg-primary text-white hover:bg-primary-700  disabled:opacity-50 disabled:pointer-events-none transition-colors duration-300 ease-in-out",
  },
  {
    name: "outline",
    class:
      "w-full py-3 px-3 flex justify-center items-center gap-x-2 text-sm rounded-lg group border border-light-foreground-300 hover:border-primary hover:text-primary focus:outline-none disabled:opacity-50 disabled:pointer-events-none dark:border-dark-foreground-700 dark:hover:text-primary-500 dark:hover:border-primary-500 transition-colors duration-300 ease-in-out",
  },
  {
    name: "white",
    class:
      "w-full py-3 px-3 flex justify-center items-center gap-x-2 text-sm rounded-lg group border border-light-background-300 hover:bg-light-background-100 disabled:opacity-50 disabled:pointer-events-none dark:border-dark-foreground-700 dark:hover:bg-dark-foreground-800 transition-colors duration-300 ease-in-out",
  },
  {
    name: "ghost",
    class:
      "py-3 px-3 flex justify-center items-center gap-x-2 text-sm rounded-lg border border-transparent group text-light-foreground-300 hover:text-light-foreground dark:text-dark-foreground-500 dark:hover:text-dark-foreground focus:text-light-foreground dark:focus:text-dark-foreground  hover:bg-light-background-200 dark:hover:bg-dark-background-800 focus:bg-light-background-200 dark:focus:bg-dark-background-800 focus:outline-none disabled:opacity-50 disabled:pointer-events-none  transition-colors duration-300 ease-in-out",
  },
  {
    name: "circle",
    class:
      "group rounded-full py-3 px-3 flex items-center justify-center font-medium focus:outline-none text-light-foreground-400 dark:text-dark-foreground-300 focus:text-primary hover:text-primary dark:hover:text-dark-foreground hover:bg-light-background-200 dark:hover:bg-dark-background-800 dark:focus:text-dark-foreground disabled:opacity-50 disabled:pointer-events-none border border-transparent transition-colors duration-300 ease-in-out",
  },
  {
    name: "link",
    class: "w-full group flex items-center justify-center font-medium focus:outline-none text-sm font-medium rounded-lg border border-transparent  text-light-foreground-300 hover:text-primary dark:text-dark-foreground-500 dark:hover:text-dark-foreground focus:text-light-foreground dark:focus:text-dark-foreground focus:outline-none disabled:opacity-50 disabled:pointer-events-none  transition-colors duration-200 ease-in-out"
  }
];
const buttonClass =
  buttonStyles.find((style) => style.name === name)?.class || "";
---

<button id={id} class={buttonClass} disabled={disabled} {...rest}>
  {iconStart && <Icon {...icon} />}
  <slot />
  {iconEnd && <Icon {...icon} />}
</button>