---
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
---

<Layout title="404">
    <section class="bg-light-background-100 dark:bg-dark-background-900">
        <div
            class="container min-h-screen px-6 py-12 mx-auto lg:flex lg:items-center lg:gap-12 text-center lg:text-left"
        >
            <div class="w-full lg:w-1/2">
                <p class="text-sm font-medium text-primary">
                    404 error
                </p>
                <h1
                    class="mt-3 text-2xl font-semibold md:text-3xl"
                >
                    Page not found
                </h1>
                <p class="mt-4 text-balance text-light-foreground-400 dark:text-dark-foreground-300">
                    Sorry, the page you are looking for doesn't exist. Here are some
                    helpful links:
                </p>

                <div class="flex items-center justify-center lg:justify-start mt-6 gap-x-3">
                    <a href="javascript:history.back()"
                        ><Button
                            name="outline"
                            icon={{ name: "mdi:keyboard-backspace", size: 20 }}
                            iconStart={true}
                        >
                            Go back
                        </Button></a
                    >
                    <a href="/">
                        <Button name="solid"> Take me home </Button>
                    </a>
                </div>
            </div>

            <div class="relative w-full mt-12 lg:w-1/2 lg:mt-0">
                <h1 class="w-full text-center lg:text-end text-7xl font-extrabold lg:text-9xl text-primary">404</h1>
            </div>
        </div>
    </section>
</Layout>
