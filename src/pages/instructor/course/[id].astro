---
import TeacherLayout from "../../../layouts/TeacherLayout.astro";
import { getCourseById } from "../../../components/services/course.ts";
import Course from "../../../components/pages/instructor/course/Course.astro";

const { id } = Astro.params;

let course;
if (id) {
  course = await getCourseById(id);
}
---

{
  course && (
    <TeacherLayout title={course.name}>
      <Course course={course} />
    </TeacherLayout>
  )
}
